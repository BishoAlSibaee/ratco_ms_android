<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@drawable/img_bg"
    tools:context=".Management.EditEmployeeDirectManager">

    <TextView
        android:id="@+id/textView98"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/mainpage_btns_background"
        android:padding="10dp"
        android:text="@string/editDirectManagerForEmployee"
        android:textColor="@color/ic_launcher_background"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/mainpage_btns_background"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/textView145"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/searchEmployee"
            android:textColor="@color/purple_700"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView146"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/mainpage_btns_background"
            android:gravity="center"
            android:hint="@string/search"
            android:onClick="goToSearchUser"
            android:padding="10dp"
            android:textColor="@color/purple_700"
            android:textColorHint="@color/teal_200"
            android:textSize="16sp"
            app:drawableStartCompat="@drawable/search_user" />

        <TextView
            android:id="@+id/textView145j"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/currentDirectManager"
            android:textColor="@color/purple_700"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView145v"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:textColor="@color/purple_700"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/textView145e"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/searchNewDirectManager"
            android:textColor="@color/purple_700"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView1463"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/mainpage_btns_background"
            android:gravity="center"
            android:hint="@string/search"
            android:onClick="goToSearchNewDirectManager"
            android:padding="10dp"
            android:textColor="@color/purple_700"
            android:textColorHint="@color/teal_200"
            android:textSize="16sp"
            app:drawableStartCompat="@drawable/search_user" />

        <Button
            android:id="@+id/button66"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/btns"
            android:onClick="saveNewDirectManager"
            android:text="@string/save" />

    </LinearLayout>

</LinearLayout>